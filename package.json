{
  "name": "hotloader",
  "version": "1.2.0",
  "description": "A simple template for creating react app using TypeScript with hot reload.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --exclude 'src/tests/*.{ts,tsx}'",
    "start": "webpack-dev-server",
    "test": "jest",
    "build": "tsc && webpack --progress",
    "clean": "rd /s/q built",
    "prepare": "tsc && webpack --progress --config webpack.prod.config.js"
  },
  "author": "Chun Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunliu/typescript-react-hot-reload"
  },
  "dependencies": {
    "antd": "3.6.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.0",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.0.0",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.0.0",
    "@types/react": "^16.4.2",
    "@types/react-dom": "^16.0.0",
    "@types/react-redux": "^5.0.7",
    "@types/react-router": "^4.0.0",
    "@types/react-router-config": "^1.0.0",
    "@types/react-router-dom": "^4.3.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "open-browser-webpack-plugin": "^0.0.5",
    "react-test-renderer": "^16.4.2",
    "redux-devtools-extension": "^2.13.4",
    "source-map-loader": "^0.2.4",
    "ts-import-plugin": "^1.5.2",
    "ts-jest": "^23.1.0",
    "ts-loader": "^4.4.1",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.1.1",
    "url-loader": "1.0.1",
    "webpack": "^4.20.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
